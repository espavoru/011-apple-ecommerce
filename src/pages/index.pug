extends ../pug/layout.pug

append config
  -
    currentTitle = 'Apple eCommerce'
    currentDescription = 'Website'
    currentUrl = 'index.html'

block header

block content
  section.iphone-12#iphone-12
    +logo('#')
      i.fab.fa-apple

    nav.navbar
      a(class='navbar__link', href='#iphone-12') iPhone12
      a(class='navbar__link', href='#mac-book') MacBook Air
      a(class='navbar__link', href='#watch') Watch
      a(class='navbar__link', href='#airpods') AirPods
    ///.navbar

    .cube__wrapper
      .cube
        .cube__front-side
          +picture({
            'img': 'iphone',
            'alt': 'iPhone 12',
            'lg': false,
            'md': true,
            'ext': 'png'
          })
        .cube__back-side
          i.fab.fa-apple

      .cube__controls
        a.top-x-control(href='#')
          i.fas.fa-arrow-up

        a.bottom-x-control(href='#')
          i.fas.fa-arrow-down

        a.left-y-control(href='#')
          i.fas.fa-arrow-left

        a.right-y-control(href='#')
          i.fas.fa-arrow-right

        a.top-z-control(href='#')
          i.fas.fa-arrow-down

        a.bottom-z-control(href='#')
          i.fas.fa-arrow-up
      ///.cube__controls

    ///.cube

    .banner
      h1 Apple eCommerce
      h2 &#8592; Best Gift
      p "Creativity is just connecting things."
      span - Steve Jobs
      +btn('Buy Now')

    .iphone-12__slideshow
  ///.iphone-12
